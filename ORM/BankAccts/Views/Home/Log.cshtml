@model LogUser

<h4 class="ml-5">Login</h4>
<form asp-controller="Home" asp-action="LoginUser" method="POST">
    <div class="form-group row mt-5">
        <label asp-for="LoginEmail" class="col-sm-2 col-form-label"></label>
        <span asp-validation-for="LoginEmail"></span>
        <div class="col-sm-10">
            <input asp-for="LoginEmail" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LoginPassword" class="col-sm-2 col-form-label"></label>
        <span asp-validation-for="LoginPassword"></span>
        <div class="col-sm-10">
            <input asp-for="LoginPassword" class="form-control">
            <a href="/">Need to Register?</a>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-success">Submit</button>
</form>