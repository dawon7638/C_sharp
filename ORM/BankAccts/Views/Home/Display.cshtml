@model User

<div class="container">
    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills float-right">
                <li class="nav-item">
                    <form asp-controller="Home" asp-action="Logout" method="POST">
                        <button type="submit" class="btn btn-outline-primary mb-1 mr-2">Log Out</button>
                    </form>

                </li>
                
            </ul>
        </nav>
        <h3 class="text-muted">Welcome, @Model.FullName()</h3>
    </div>
    <hr>
    @{
        Transaction newTransaction = new Transaction();
    }
    <partial name="_Transaction" model="@newTransaction" />
    <hr>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Amount</th>
                <th scope="col">Date</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var trans in ViewBag.AccountUser)
            {
                <tr>
                    <td>@trans.TransactionId</td>
                    <td>@string.Format("{0:0,0.00}", @trans.Amount)</td>
                    <td>@trans.CreatedAt</td>
                </tr>
            }

        </tbody>
    </table>
