@model User

<h4 class="ml-5">Register</h4>
<form asp-controller="Home" asp-action="Create" method="POST" >
    <div class="form-group row mt-5">
        <label asp-for="FirstName"  class="col-sm-2 col-form-label"></label>
        <span asp-validation-for="FirstName"></span>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName"  class="col-sm-2 col-form-label"></label>
        <span asp-validation-for="LastName"></span>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email"  class="col-sm-2 col-form-label"></label>
        <span asp-validation-for="Email"></span>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password"  class="col-sm-2 col-form-label"></label>
        <span asp-validation-for="Password"></span>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PasswordConfirm"  class="col-sm-2 col-form-label"></label>
        <span asp-validation-for="PasswordConfirm"></span>
        <div class="col-sm-10">
            <input asp-for="PasswordConfirm" class="form-control">
            <a href="/login">Already Registered?</a>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-success">Submit</button>
</form>