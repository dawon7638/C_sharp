@model RegUser
<div class="header clearfix">
    <nav>
        <ul class="nav nav-pills float-right">
            <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
            </li>
        </ul>
    </nav>
    <h1 class="text-muted text-center">Register to this Cool Site!</h1>
</div>


<form asp-controller="RegUsers" asp-action="Register" method="POST" class="form-horizontal">
    <fieldset>

        <!-- Text input-->
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label" for="textinput"></label><span
                asp-validation-for="FirstName" class="text-danger"></span>
            <div class="col-md-4">
                <input asp-for="FirstName" placeholder="first name" class="form-control input-md">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label asp-for="LastName" class="col-md-2 control-label" for="textinput"></label>
            <span asp-validation-for="LastName" class="text-danger"></span>
            <div class="col-md-4">
                <input asp-for="LastName" placeholder="last name" class="form-control input-md">
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label" for=""></label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <div class="col-md-4">
                <input asp-for="Email" placeholder="email" class="form-control input-md">
            </div>
        </div>

        <!-- Password input-->
        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label" for=""></label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="col-md-4">
                <input asp-for="Password" placeholder="password" class="form-control">
            </div>
        </div>

        <!-- Password input-->
        <div class="form-group">
            <label asp-for="PasswordConfirm" class="col-md-2 control-label" for=""></label>
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            <div class="col-md-4">
                <input asp-for="PasswordConfirm" placeholder="confirm password"
                    class="form-control input-md">
            </div>
        </div>

        <!-- Button -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="singlebutton"></label>
            <div class="col-md-4">
                <button type="submit" id="singlebutton" name="singlebutton" class="btn btn-primary">Sign up Now</button>
            </div>
        </div>

    </fieldset>
</form>
