<h3 class="text-center">Add a Dish!</h3>
<a href="/">Home</a>
@model Dish

<form asp-controller="Home" asp-action="CreateDish" method="POST">
    <div class="form-group mt-5">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Calories"></label>
        <span asp-validation-for="Calories" class="text-danger"></span>
        <input asp-for="Calories" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ChefId"></label>
        <span asp-validation-for="ChefId" class="text-danger"></span>
        <select asp-for="ChefId" class="form-control">
            @foreach (var chef in ViewBag.AddingChefs)
            {
            <option value=@chef.ChefId>@chef.FullName()</option> 
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Tastiness"></label>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
        <select asp-for="Tastiness" class="form-control">
            <option>1</option> 
            <option>2</option> 
            <option>3</option> 
            <option>4</option> 
            <option>5</option> 
            
        </select>
    </div>
    
    <button type="submit" class="btn btn-primary">Add Dish</button>
</form>
