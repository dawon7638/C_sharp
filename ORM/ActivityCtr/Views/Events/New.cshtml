@model Event
@{
    int? uid = @Context.Session.GetInt32("UserId");
}
<div class="text-center row justify-content-around align-items-center">
    <h1>Dojo Activity Center </h1>
    <a href="/home">Home</a>
    <a href="/signin">Log Out</a>
</div>
<hr>
<h3>Create an Activity</h3>

<form asp-action="Create" asp-controller="Events" method="POST">
    <div class="form-group">
        <label asp-for="Todo"></label>
        <span asp-validation-for="Todo" class="text-danger"></span>
        <input asp-for="Todo" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <span asp-validation-for="Date" class="text-danger"></span>
        <input asp-for="Date" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <span asp-validation-for="Time" class="text-danger"></span>
        <input asp-for="Time" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <span asp-validation-for="Duration" class="text-danger"></span>
        <input asp-for="Duration" class="form-control">
        <select asp-for="Duration" class="form-control">
            <option value="">Hours</option>
            <option value="">Minutes</option>
            <option value="">Days</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <span asp-validation-for="Description" class="text-danger"></span>
        <input asp-for="Description" class="form-control">
    </div>
    <button type="submit" class="btn btn-outline-success float-right">Create Activity</button>
</form>